{% extends "admin/layout.njk" %}

{% block content %}
    {% block title %}
        <div class="page_title">
            <h2>Receita: {{recipes.title}}</h2>
                <a href="/admin/recipes/{{recipes.id}}/edit"><button type="submit" action="" >Editar receita</button></a>
        </div>
    {% endblock title %}

    <section class="banner" style="background: url({{recipes.img_url}}) no-repeat center center / cover">
    </section>

    <div class="autor_prato">
        <h2>{{recipes.title}}</h2>
        <h3>{{recipes.author}}</h3>
    </div>

    <section class="card">

        <div class="item">
            <h3>ingredientes</h3>
            <ul>
                {% for ingredient in recipes.ingredients %}
                    <li>- {{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="item">
            <h3>ingredientes</h3>
            <ul>
                {% for prepare in recipes.preparation %}
                    <li>- {{prepare}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="item">
            <h3>Informações Adicionais</h3>
            <textarea>{{recipes.information}}</textarea>
        </div>

    </section>

{% endblock content %}