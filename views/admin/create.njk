{% extends 'admin/layout.njk' %}

{% block content %}

{% block title %}
    <div class="page_title">
        <h2>Criando receita</h2>
        <button type="submit">Salvar receita</button>

    </div>
{% endblock title %}

<form class="form_create" method="POST" action="/admin/recipes">

    <div class="itens">
        <h3>Imagem da receita</h3>
        <input type="url" name="img_url" placeholder="https://">
    </div>

    <div class="itens">
        <h3>Prato</h3>
        <input type="text" name="name" placeholder="Nome do prato">
    </div>

    <div class="itens">
        <h3>Autor da receita</h3>
        <input type="text" name="author" placeholder="autor da receita">
    </div>

    <div id="ingredients" class="itens">
        <h3>Ingredientes</h3>
        <div class="ingredient">
            <input type="text" name="ingredients[]" value="" placeholder="ex.: sal">
        </div>
    </div>
    <button class="add_ingredient" type="button">Adicionar novo ingrediente</button>

    <div id="prepare" class="itens">
        <h3>Modo de preparo</h3>
        <div class="preparo">
            <input type="text" name="prepare[]">
        </div>
    </div class="itens">
    <button class="add_prepare" type="button">Adicionar novo passo</button>

    <div class="itens">
        <h3>Informa√ßoes adicionais</h3>
        <textarea name="infos"  cols="30" rows="10"></textarea>
    </div>
    <script src="/scripts/utils.js"></script>
    <button type="submit">ds</button>

</form>

{% endblock content %}