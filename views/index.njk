{% extends "layout.njk" %}

{% block head %}
    <title>{{recipes.title}}</title>
{% endblock head %}

{% block content %}

    <section class="details_recipe">
        <img src="{{recipes.image}}" alt="Imagem de {{recipes.title}}">

        <h3>{{recipes.title}}</h3>
        <h4>{{recipes.author}}</h4>

        <div class="details">
            <ul class="pre_ing_info">
                <h1>Ingredientes<span>Esconder</span></h1>
                <div class="hide_button">
                    {% for ingredients in recipes.ingredients %}
                        <li>{{ingredients}}</li>
                    {% endfor %}
                </div>
            </ul>
            <ul class="pre_ing_info">
                <h1>Modo de Preparo<span>Esconder</span></h1>
                <div class="hide_button">
                    {% for preparation in recipes.ingredients%}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </div>
            </ul>
            <div class="pre_ing_info">
                <h1>Informa√ßoes adcionais<span>Esconder</span></h1>
                <div class="hide_button">
                    <p>{{recipes.information}}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}